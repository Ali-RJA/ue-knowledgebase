{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "npm run dev",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicy": "ON_FAILURE",
    "maxRetries": 3
  },
  "env": {
    "groups": {
      "mongodb": [
        "VITE_MONGO_URL",
        "VITE_DATABASE_URL"
      ]
    }
  }
}
